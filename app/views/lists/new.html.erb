
<div class="container">
    <h1>CREATE YOUR LIST</h1>  
      <%= simple_form_for @list do |f| %>
      <div class="card">
          <div class="card-body" style="text-align: center">
            <%= f.input :name %>
            <%= f.button :submit, class: "btn btn-danger"%>
          </div>
          <%= link_to "GO BACK TO LISTS", lists_path, class: "btn btn-success"%>
      </div>
      <% end %>
 </div>
